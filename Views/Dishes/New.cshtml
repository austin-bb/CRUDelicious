@using Dishes.Models
@model Dish

<a href="/dishes/all">Home</a>
<h1 class="text-center m-5">Add a New Dish!</h1>

<form asp-controller="Dishes" asp-action="Create" method="POST" class="d-flex justify-content-around">
  <div>
    <div class="mt-3">
      <label asp-for="ChefName"></label>
      <span asp-validation-for="ChefName" class="text-danger font-weight-bold"></span>
      <input class="form-control" asp-for="ChefName">
    </div>
    <div class="mt-3">
      <label asp-for="DishName"></label>
      <span asp-validation-for="DishName" class="text-danger font-weight-bold"></span>
      <input class="form-control" asp-for="DishName">
    </div>
    <div class="mt-3">
      <label asp-for="Calories"></label>
      <span asp-validation-for="Calories" class="text-danger font-weight-bold"></span>
      <input class="form-control" asp-for="Calories">
    </div>
  </div>
  <div class="mt-3">
    <label asp-for="Tastiness"></label>
    <span asp-validation-for="Tastiness" class="text-danger font-weight-bold"></span>
    <select asp-for="Tastiness" id="Tastiness" class="form-control">
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5">5</option>
    </select>
  </div>
  <div>
    <div class="mt-3">
      <label asp-for="Description"></label>
      <span asp-validation-for="Description" class="text-danger font-weight-bold"></span>
      <textarea asp-for="Description" cols="30" rows="5" class="form-control"></textarea>
    </div>
    <button class="btn btn-primary mt-3" type="submit">Submit</button>
  </div>
</form>

